// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  user_id   Int       @id @default(autoincrement())
  username  String
  email     String    @unique
  prompts   Prompt[]
  homes     Home[]
  analytics Analytics[]
}

model Prompt {
  prompt_id Int    @id @default(autoincrement())
  user_id   Int
  text      String
  response  String

  user      User   @relation(fields: [user_id], references: [user_id])
}

model Home {
  home_id      Int    @id @default(autoincrement())
  user_id      Int
  post         String
  upload_media String

  user         User   @relation(fields: [user_id], references: [user_id])
}

model Analytics {
  analytics_id Int    @id @default(autoincrement())
  social_media String
  user_id      Int

  user         User   @relation(fields: [user_id], references: [user_id])
}
